<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/intro_imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/page1" />

            <TextView
                android:id="@+id/intro_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="TITLE"
                android:textColor="#262626"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/intro_desc_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/intro_title_textView"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:lineSpacingExtra="8dp"
                android:text="여기에 앱에 대한 자세한 내용 쓸 수 있어서 일단 길게 서보고 나서 어떻게 처리되는지 본 다음에 그 다음에 결정해도 크게 무리가 되는 건 아니다고 생각합니다."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/intro_title_textView" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>